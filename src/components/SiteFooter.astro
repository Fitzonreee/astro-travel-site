---
import LogoLink from "./LogoLink.astro";
import PrimaryNavigation from "./PrimaryNavigation.astro";
import NavigationLink from "./NavigationLink.astro";
import SocialLinks from "./SocialLinks.astro";
import NavLinks from "../content/navigation/links.json";
---

<footer class="site-footer padding-block-4 margin-block-start-12">
  <div class="container">
    <div class="flex-group align-center full-width">
      <LogoLink />
      <PrimaryNavigation label="footer navigation">
        {
          NavLinks.map((link) => (
            <NavigationLink textContent={link.name} url={link.url} />            
          ))
        }
      </PrimaryNavigation>
      <SocialLinks />
      <p class="push-start">Copyright 2025</p>
    </div>
  </div>
</footer>

<style lang="scss">
  @use "../styles/abstracts" as *;

  .site-footer {
    background-color: $footer-background-color;
    color: $footer-text-color;
    
    a {
      color: $footer-link-color;
      text-decoration: $footer-link-text-decoration;
      font-family: $footer-link-font-family;

      &:is(:hover, :focus) {
        color: $footer-link-color-hover;
      }
    }
  }
</style>
